{
    "vendorbin": "./modules/registrars/keysystems/vendor/bin/",
    "phpcsparams": "--extensions=php --ignore=node_modules,vendor,templates_c -q modules resources tests",
    "phpcsfixcmd": "phpcbf --standard=PSR12",
    "phpcschkcmd": "phpcs -n --colors --standard=PSR12",
    "phpstancmd": "phpstan analyze -c phpstan.neon --memory-limit 2G",
    "archiveFileName": "whmcs-cnic-registrar",
    "archiveBuildPath": "build",
    "filesForArchive": [
        "README.md",
        "CONTRIBUTING.md",
        "HISTORY.md",
        "LICENSE",
        "@(modules|resources)/**"
    ],
    "filesForCleanup": [
        "templates_c",
        ".phpunit.result.cache",
        "tmp"
    ]
}